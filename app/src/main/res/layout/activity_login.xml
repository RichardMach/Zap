<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/largura_logo"
        android:layout_height="@dimen/altura_logo"
        android:layout_marginStart="116dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/logo"
        android:contentDescription="@string/app_name" />

    <EditText
        android:id="@+id/editTxtNomeID"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="314dp"
        android:ems="10"
        android:hint="Digite seu usuÃ¡rio"
        android:inputType="textPersonName"
        android:textColor="@color/txtColorPrimary" />

    <EditText
        android:id="@+id/editTxtDdiId"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="326dp"
        android:ems="10"
        android:hint="+55"
        android:inputType="phone"
        android:textColor="@color/txtColorPrimary" />

    <EditText
        android:id="@+id/editTxtDddId"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="327dp"
        android:layout_toEndOf="@+id/editTxtDdiId"
        android:ems="10"
        android:hint="11"
        android:inputType="phone"
        android:textColor="@color/txtColorPrimary" />

    <EditText
        android:id="@+id/editTxtPhoneNumber"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="324dp"
        android:ems="10"
        android:hint="99999999"
        android:inputType="phone"
        android:singleLine="false"
        android:textColor="@color/txtColorPrimary" />

    <Button
        android:id="@+id/btnCadastrarId"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="87dp"
        android:layout_marginBottom="188dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_cadastrar"
        android:textColor="@color/txtColorPrimary" />

</RelativeLayout>